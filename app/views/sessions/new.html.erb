<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>
<% if logged_in? %>
  <%= link_to "Go to Happy Talk", happy_talks_path, class: "btn btn-default"  %>
  <%= link_to "Logout", session_path(current_user.id), method: :delete, class: "btn btn-default"  %>
<% else %>
  <%= link_to "HOME", root_path, class: "btn btn-default"  %>
  <%= link_to "Sign up", new_user_path, class: "btn btn-default"  %>
<% end %>

<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log in", class: "btn btn-default" %>
<% end %>
